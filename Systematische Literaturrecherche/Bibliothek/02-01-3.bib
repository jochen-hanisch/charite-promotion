@article{liaw_designing_2015,
	title = {Designing and {Evaluating} an {Interactive} {Multimedia} {Web}-{Based} {Simulation} for {Developing} {Nurses}? {Competencies} in {Acute} {Nursing} {Care}: {Randomized} {Controlled} {Trial}},
