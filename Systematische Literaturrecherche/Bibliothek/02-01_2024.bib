@article{futterer_teachers_2024,
	title = {Teachers’ trajectories of technology integration during participation in an online professional development program},
	volume = {27},
	issn = {1434-663X, 1862-5215},
	url = {https://link.springer.com/10.1007/s11618-024-01251-6},
