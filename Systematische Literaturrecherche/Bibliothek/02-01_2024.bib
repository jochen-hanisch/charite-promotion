	journal = {Herausforderung Lehrer*innenbildung - Zeitschrift zur Konzeption},
	author = {Wuttke, Eveline and Seeber, Susan and Meiners, Hanna and Hartmann, Philipp and Turhan, Lütfiye and Niegemann, Helmut and Schumann, Matthias and Geiser, Carolin},
