	file = {Bail et al. - 2024 - Technostresserleben in der stationären medizinisch.pdf:/Users/jochenhanisch-johannsen/Zotero/storage/KBPKQAZX/Bail et al. - 2024 - Technostresserleben in der stationären medizinisch.pdf:application/pdf},
