@article{soller_transfer_2024,
	title = {Transfer of {Knowledge} on {Pneumoconiosis} {Care} {Among} {Rural}-{Based} {Members} of a {Digital} {Community} of {Practice}: {Cross}-{Sectional} {Study}},
