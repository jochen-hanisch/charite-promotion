	journal = {J Med Internet Res},
	author = {Li, Shuang and Li, Guoqing and Liu, Ying and Xu, Wanying and Yang, Ningning and Chen, Haoyuan and Li, Ning and Luo, Kunpeng and Jin, Shizhu},
	month = mar,
