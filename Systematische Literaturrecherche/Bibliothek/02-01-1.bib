@article{katz_simulation_2017,
	title = {Simulation {Training}: {Evaluating} the {Instructor}?s {Contribution} to a {Wizard} of {Oz} {Simulator} in {Obstetrics} and {Gynecology} {Ultrasound} {Training}},
