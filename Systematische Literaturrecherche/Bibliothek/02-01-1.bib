	number = {1},
	urldate = {2023-11-18},
	journal = {BMC Medical Education},
	author = {Bediang, Georges and Stoll, Beat and Geissbuhler, Antoine and Klohn, Axel M and Stuckelberger, Astrid and Nko’o, Samuel and Chastonay, Philippe},
