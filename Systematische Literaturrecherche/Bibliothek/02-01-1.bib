	number = {2},
	urldate = {2021-11-12},
	journal = {JMIR Medical Education},
	author = {Barteit, Sandra and Jahn, Albrecht and Bowa, Annel and Lüders, Sigrid and Malunga, Gregory and Marimo, Clemence and Wolter, Sigrid and Neuhann, Florian},
	month = nov,
